@using eBookStore.Services.ViewModels.UserViewModels;
@model UserCreateModel
@{
    ViewData["Title"] = "Create";
}
<form method="post" asp-controller="User" asp-action="Create">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Create User</h1>
        <hr />
        <div class="row">
             <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Email</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Email" type="email"/>
            </div>
         <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Password</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Password" />
            </div>
             <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Source</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Source" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">FirstName</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="FirstName" />
            </div>
           
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">MiddleName</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="MiddleName" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">LastName</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="LastName" />
            </div>
            
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Role</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Publisher</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="PublisherId" class="form-control" asp-items="ViewBag.PublisherId"></select>
            </div>
            <div class="col-5 offset-2">

                <a class="btn-primary btn form-control" asp-controller="User" asp-action="Index">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>
