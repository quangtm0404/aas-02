@using eBookStore.Services.ViewModels.BookModels;
@model BookViewModel
@{
    ViewData["Title"] = "Details";
}

<form method="post" asp-controller="Book" asp-action="Details">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Book Detail</h1>
        <hr />
        <div class="row">
             <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Title</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Id" type="hidden" value="@Model.Id"/>
                <input class="form-control" asp-for="Title" value="@Model.Title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
             <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Type</label>
            </div>
            <div class="col-10 pb-3">
                
                <input class="form-control" asp-for="Type" value="@Model.Type"/>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

             <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                
                <input class="form-control" asp-for="Price" value="@Model.Price"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
             <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Advance</label>
            </div>
            <div class="col-10 pb-3">
                
                <input class="form-control" asp-for="Advance" value="@Model.Advance"/>
                <span asp-validation-for="Advance" class="text-danger"></span>
            </div>
             <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Royalty</label>
            </div>
            <div class="col-10 pb-3">
                
                <input class="form-control" asp-for="Royalty" value="@Model.Royalty"/>
                <span asp-validation-for="Royalty" class="text-danger"></span>
            </div>

             <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Published Date</label>
            </div>
            <div class="col-10 pb-3">
                
                <input class="form-control" type="dates" asp-for="PublishedDate" value="@Model.PublishedDate"/>
                <span asp-validation-for="PublishedDate" class="text-danger"></span>
            </div>

             <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Notes</label>
            </div>
            <div class="col-10 pb-3">
                
                <input class="form-control" asp-for="Notes" value="@Model.Notes"/>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="PublisherId" value="@Model.PublisherId"/>
            <input type="hidden" asp-for="BookAuthors" value="@Model.BookAuthors"/>
            
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Book Authors</label>
            </div>
            <div class="col-10 pb-3">

            
            @{
                foreach(var x in Model.BookAuthors)
                {
                    <p class="text-primary">Author Id: @x.AuthorId</p>
                    <p class="text-primary" >Percentage: @x.Royality_Percentage</p>
                }
            }
            </div>
            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-controller="Book" asp-action="Index">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>